<view>
<button bindtap='getConfig'>获取配置</button>
  <button bindtap='selectLocation'>选择地理位置</button>
  <view wx:if="{{mapInfo.address}}">
    <text>{{mapInfo.address}}</text>
    <!-- <button bindtap='searchLeitai'>擂台搜索</button> -->
    <button bindtap='searchYaojing'>妖灵搜索</button>
    <input type="text" bindinput='bindXInput' placeholder='x范围'></input>
    <input type="text" bindinput='bindYInput' placeholder='y范围'></input>
  </view>
</view>

<scroll-view scroll-y class="item-wrapper">
  <view class="item-list" wx:for="{{result}}" wx:for-item="item" wx:for-index="index" wx:key="that">
    <view class="item-info" style="left:{{item.left + 'rpx'}}" bindtap="tapview" data-content="{{item}}" >
      <view class="info-wrapper">
        <view class="info-desc">
          <view class="name">{{item.name}}</view>
          <view class="time">{{item.lefttime}}</view>
        </view>
        <!-- <view class="info-content">{{item.info}}</view> -->
        <view class="info-content">{{item.latitude + ", " + item.longtitude}}</view>
      </view>
    </view>
  </view>
</scroll-view>