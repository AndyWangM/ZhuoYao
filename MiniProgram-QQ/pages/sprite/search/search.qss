.user {
  width: 100%;
  height: 100%;
  /* background-color: #e5e5e5; */
}

.list {
  background: #f8f8f8;
  height: 100.77rpx;
  line-height: 100.77rpx;
  padding: 0 35.15rpx;
  border: 1px solid #f8f8f8;
  background: #fff;
  font-size: 32.81rpx;
}

.info {
  height: 421.85rpx;
  margin-bottom: 23.44rpx;
}

.info-wrap {
  margin: auto;
  text-align: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.info-icon {
  display: block;
  overflow: hidden;
  width: 164rpx;
  height: 164rpx;
  border: 4.69rpx solid #fff;
  border-radius: 82rpx;
  margin-top: 105.46rpx;
  margin-bottom: 29.29rpx;
  background-size: 154.62rpx 154.62rpx;
}

.list-icon-wrap {
  float: left;
  height: 100.77rpx;
  line-height: 100.77rpx;
}

.list-icon {
  width: 42.18rpx;
  height: 42.18rpx;
  margin-top: 30rpx;
}

.arrow-wrap {
  float: right;
  color: #999;
  line-height: 100.77rpx;
  font-size: 23.44rpx;
}

.list-arrow {
  width: 11.72rpx;
  height: 25.78rpx;
  margin: 35rpx 0 0 18.75rpx;
}

.list-text {
  float: left;
  font-size: 32.81rpx;
  text-indent: 29.29rpx;
}

.hidden-btn {
  display: inline-block;
  position: absolute;
  width: 100%;
  background: salmon;
  opacity: 0;
}

/* pages/leftSlide/leftSlide.wxss */

.item-wrapper {
  width: 100%;
  overflow: hidden;
}

.item-list {
  position: relative;
  width: 100%;
  height: 138rpx;
  margin-left: 20rpx;
}

.item-info, .item-oper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}

.item-info {
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}

.item-list:first-child {
  border-top: 1px solid #ccc;
}

.item-oper {
  display: flex;
  justify-content: flex-end;
}

.oper-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}

.info-img {
  width: 100rpx;
  height: 100rpx;
}

.info-wrapper {
  margin-left: 20rpx;
  width: 588rpx;
}

.info-desc {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 6rpx;
}

.info-desc .name {
  font-size: 32rpx;
  color: black;
  font-weight: 600;
}

.info-desc .time {
  font-size: 24rpx;
  color: #999;
}

.info-content {
  font-size: 28rpx;
  color: #999;
  margin-top: 4rpx;
}

.head_search {
  position: relative;
  padding: 20rpx;
  background-color: #f0f0f0;
  display: flex;
}

.text_search {
  box-sizing: border-box;
  padding-left: 42rpx;
  width: 100%;
  height: 67rpx;
  font-size: 24rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.icon_search {
  font-size: 30rpx;
}
